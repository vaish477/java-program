import java.io.*;
import java.util.*;
import java.text.*; 
import java.math.*;
import java.util.regex.*; 
public class Solution {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt(); int b=sc.nextInt();
        int c=sc.nextInt(); int d=sc.nextInt();
        int e=sc.nextInt(); double Area=0.5*a*b;
        double Perimeter=c+d+e; System.out.printf("Area of Triangle is %.2f",Area);
        System.out.printf("\nPerimeter of Triangle is %.2f",Perimeter);
    }
}
